<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Proiect.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Proiect"
    Shell.FlyoutBehavior="Disabled">

   
    <FlyoutItem FlyoutDisplayOptions="AsMultipleItems">
        <ShellContent Title="Home" ContentTemplate="{DataTemplate local:MainPage}"/>
        <ShellContent Title="About" ContentTemplate="{DataTemplate local:About}"/>
        <Tab Title="Events">
            <ShellContent Title="Description" ContentTemplate="{DataTemplate local:Events}"/>
            <ShellContent Title="Divertisment" ContentTemplate="{DataTemplate local:Divertisment}"/>
            <ShellContent Title="Cultural" ContentTemplate="{DataTemplate local:Social}"/>
            <ShellContent Title="Social" ContentTemplate="{DataTemplate local:Cultural}"/>
            <ShellContent Title="My events" ContentTemplate="{DataTemplate local:ListEntryPage}"
 />
        </Tab>
        

    </FlyoutItem>
</Shell>
